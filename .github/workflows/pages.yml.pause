name: Update pages

on:
  push:
    branches:
      - main

jobs:
  build:
    name: Pages
    runs-on: ubuntu-latest
    steps:
      - name: 🔎 Check out repo
        uses: actions/checkout@main

      - name: 🧑‍💻 Setup Node
        uses: actions/setup-node@v2
        with:
          node-version: '14'

      - name: 📦 Install Dependencies
        run: yarn install

      - name: 🏗️ Build assets
        run: yarn build

